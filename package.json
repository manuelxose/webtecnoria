    "@angular/compiler-cli": "19.2.15",
    "@types/express": "^4.17.17",
    "@types/node": "^18.19.0",
    "browser-sync": "^3.0.4",
    "eslint": "^8.57.0",
    "jasmine-core": "~4.5.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-jasmine": "~5.1.0",
