{
  "name": "web-empresa",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Angular 19 + SSR (minimal, updated)",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:watch": "ng build --watch",
    "build:ssr": "ng build",
    "build:ssr:initial": "npm run clean && ng build",
    "build:server:watch": "ng build --watch",
    "serve:ssr": "node dist/server/server.mjs",
    "serve:ssr:watch": "nodemon --watch dist/server --delay 2000ms --exec \"node dist/server/server.mjs\"",
    "dev:ssr": "npm run build:ssr && concurrently \"ng build --watch\" \"nodemon --watch dist/server --delay 2500ms --exec \\\"node dist/server/server.mjs\\\"\"",
    "dev:ssr:clean": "npm run clean && npm run dev:ssr",
    "serve-ssr:dev": "ng run web-empresa:serve-ssr",
    "clean": "rimraf dist .angular node_modules/.cache",
    "lint": "eslint . --ext .ts,.html",
    "test": "echo \"(tests not configured)\" && exit 0",
    "e2e": "echo \"E2E not configured (use Cypress/Playwright)\" && exit 0"
  },
